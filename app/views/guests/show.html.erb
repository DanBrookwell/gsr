<p id="notice"><%= notice %></p>

<div class="row">
    <h3><strong><%= @guest.first_name %> <%= @guest.last_name %></strong></h3>
  </div>
  <div class="row" style="text-align:right;">
    <%= link_to 'Add New Experience', new_guest_experience_path(@guest, @experience), :class => "btn btn-sm btn-success" %>
    <%= link_to 'Edit Guest Profile', edit_guest_path(@guest), :class => "btn btn-sm btn-default" %>
    <%= link_to 'Guest Log', guests_path, :class => "btn btn-sm btn-default" %>
  </div>

<div class="row">
  <div class="col-sm-6">
    <div class="row">
    <div class="col-sm-5"><strong>Email:</strong></div>
    <div class="col-sm-5"><%= @guest.email %></div>
  </div>

  <div class="row">
    <div class="col-sm-5"><strong>Phone:</strong></div>
    <div class="col-sm-5"><%= @guest.phone %></div>
  </div>
  </div>

  <div class="col-sm-5">
    <div class="row">
    <div class="col-sm-5"><strong>Street Address:</strong></div>
    <div class="col-sm-5"><%= @guest.street_address %></div>
  </div>

  <div class="row">
    <div class="col-sm-5"><strong>City:</strong></div>
    <div class="col-sm-5"><%= @guest.city %></div>
  </div>

  <div class="row">
    <div class="col-sm-5"><strong>State:</strong><div>
    <div class="col-sm-5"><%= @guest.state %></div>
  </div>
  </div>
</div>

<div class="row">

<table class="table table-hover col-sm-12">
  <thead>
    <tr>
      <th>#:</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td>E-00<%= experience.id %></td>
        <td><%= experience.details %></td>
        <td style="text-align:right;"><%= link_to 'View Experience Details', [experience.guest, experience], :class => "btn btn-sm btn-success"  %> <%= link_to 'Edit', edit_guest_experience_path(experience.guest, experience), :class => "btn btn-sm btn-default"  %> <%= link_to 'Destroy', [experience.guest, experience], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>